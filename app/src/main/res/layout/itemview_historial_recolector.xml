<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_foto"
        android:layout_width="166dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:layout_margin="5dp"

        tools:srcCompat="@drawable/aceptado" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_material"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textStyle="bold"

            android:text="MATERIAL" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_kilos"
                android:layout_width="140dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="10.00KG" />

            <TextView
                android:id="@+id/txt_soles"
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="S/ 100.00" />

        </LinearLayout>




        <TextView
            android:id="@+id/txt_tlf"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="AV. Girasoles #123 AAAAA AAAAA AA3" />

        <TextView
            android:id="@+id/txt_hora"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="4:50:00 PM" />



    </LinearLayout>


</LinearLayout>
